    <script>
        function obtenerUbicacionReal() {
            if (navigator.geolocation) {
                navigator.geolocation.getCurrentPosition(function(pos) {
                    const url = `https://www.google.com/maps?q=${pos.coords.latitude},${pos.coords.longitude}`;
                    document.getElementById('gps_url').value = url;
                    document.getElementById('status_gps').classList.remove('hidden');
                    alert("üìç Ubicaci√≥n vinculada.");
                }, function() { alert("Por favor activa el GPS."); });
            }
        }

        function enviarPedido() {
            const pedido = document.getElementById('pedido').value;
            const gps = document.getElementById('gps_url').value;
            
            if(!pedido) return alert("Por favor escribe tu pedido.");

            let msg = `*üõ¢Ô∏è NUEVA SOLICITUD - MEGACEITES*\n`;
            msg += `----------------------------------\n`;
            msg += `üìù *Pedido:* ${pedido}\n`;
            if(gps) msg += `üìç *Ubicaci√≥n:* ${gps}\n`;
            msg += `----------------------------------\n`;
            msg += `üöÄ _App por Vibras Positivas_`;

            window.open(`https://wa.me/573205953994?text=${encodeURIComponent(msg)}`);
        }
    </script>
